<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/fileNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filename.jpg"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/filePathTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="storage/emulated/0/DCIM/Filename.jpg"
        android:textSize="12sp"
        android:textColor="#888888"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/fileSizeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size: 3.4 MB"
        android:textSize="12sp"
        android:textColor="#888888"
        android:paddingBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/deleteOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="16sp"
        android:textColor="@color/black"

        android:drawablePadding="8dp"
        android:paddingVertical="12dp" />

    <TextView
        android:id="@+id/shareOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        android:paddingVertical="12dp" />

</LinearLayout>
